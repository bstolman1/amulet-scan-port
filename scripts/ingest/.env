# --------------------------------------------
# FETCHER SETTINGS (AGGRESSIVE for 10x speedup)
# --------------------------------------------
# Push network throughput HARD - your connection can likely handle 20-30
PARALLEL_FETCHES=20

# API max is 1000 per request
BATCH_SIZE=1000

# Deeper prefetch queue multiplier (fetches PARALLEL_FETCHES * this many ahead)
PREFETCH_MULTIPLIER=10

# --------------------------------------------
# WORKER THREAD SETTINGS
# --------------------------------------------
# Optimal for your CPU (20 hardware threads â†’ 24 workers)
MAX_WORKERS=24

# Larger chunks = fewer ZSTD flushes = higher throughput
CHUNK_SIZE=4096

# --------------------------------------------
# COMPRESSION SETTINGS
# --------------------------------------------
# Slightly higher compression, negligible speed loss on your CPU
ZSTD_LEVEL=2

# Larger I/O buffer for streaming decompression and worker pipes
IO_BUFFER_SIZE=1048576

# --------------------------------------------
# FILE MANAGEMENT
# --------------------------------------------
MAX_ROWS_PER_FILE=20000
SCAN_URL=https://scan.sv-1.global.canton.network.sync.global/api/scan

# Make sure this is where your ingestion pipeline writes data
DATA_DIR=C:\\ledger_raw

# Faster file writes
FLUSH_INTERVAL_MS=0
