# ---------------------------
# Canton SV-1 Scan Endpoint
# ---------------------------
SCAN_URL=https://scan.sv-1.global.canton.network.sync.global/api/scan

# SV-1 LIMIT: MUST be <= 1000
BATCH_SIZE=1000

# Polling interval while backfill runs
POLL_INTERVAL=2000

# ---------------------------
# Performance Settings (Windows-Optimized)
# ---------------------------
PARALLEL_FETCHES=8          # Prevents memory overflow until disk speed is fixed
MAX_CONCURRENT_WRITES=24    # Windows NTFS needs high parallelism
MAX_ROWS_PER_FILE=300000    # 6× fewer gzip files → MUCH faster
IO_BUFFER_SIZE=1048576      # 1 MB write buffer = faster gzip

# Keep gzip for disk savings, but level=1 is fastest
GZIP_LEVEL=1
