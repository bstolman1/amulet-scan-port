# --------------------------------------------
# FETCHER SETTINGS
# --------------------------------------------
# Increase from 4 → 6 to push network throughput
PARALLEL_FETCHES=6

# Keep batches at 1000–20000 depending on your taste; you're using 20k updates per batch now
BATCH_SIZE=1000

# --------------------------------------------
# WORKER THREAD SETTINGS
# --------------------------------------------
# Optimal for your CPU (20 hardware threads → 24 workers)
MAX_WORKERS=24

# Larger chunks = fewer ZSTD flushes = higher throughput
CHUNK_SIZE=4096

# --------------------------------------------
# COMPRESSION SETTINGS
# --------------------------------------------
# Slightly higher compression, negligible speed loss on your CPU
ZSTD_LEVEL=2

# Larger I/O buffer for streaming decompression and worker pipes
IO_BUFFER_SIZE=1048576  # 1 MB

# --------------------------------------------
# FILE MANAGEMENT
# --------------------------------------------
MAX_ROWS_PER_FILE=20000
SCAN_URL=https://scan.sv-1.global.canton.network.sync.global/api/scan

# Make sure this is where your ingestion pipeline writes data
DATA_DIR=C:\\ledger_raw

# Faster file writes
FLUSH_INTERVAL_MS=0
