# Server configuration
PORT=3001

# Data directory - path to where backfill writes data
# This should match where fetch-backfill-parquet.js writes
# Windows example: C:\ledger_raw
# Linux/Mac example: /var/lib/amulet-scan/ledger_raw
DATA_DIR=/path/to/ledger_raw
CURSOR_DIR=/path/to/ledger_raw/cursors

# Engine configuration
ENGINE_ENABLED=true

# Engine tuning
ENGINE_INTERVAL_MS=30000
ENGINE_FILES_PER_CYCLE=3

# Groups.io API key for governance data (Optional)
# Get your API key from https://groups.io
GROUPS_IO_API_KEY=your-groups-io-api-key

# Kaiko API key for market data (Optional)
# Get your API key from https://kaiko.com
KAIKO_API_KEY=your-kaiko-api-key

# OpenAI API key for LLM classification (Optional)
# Get your API key from https://platform.openai.com
OPENAI_API_KEY=your-openai-api-key

# Security Configuration
# Comma-separated list of allowed origins for CORS
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Authentication secret for JWT tokens
# Generate a secure random string: openssl rand -hex 64
JWT_SECRET=your-secure-random-secret-key-here

# API key for administrative endpoints
# Generate a secure random string: openssl rand -hex 32
ADMIN_API_KEY=your-admin-api-key
